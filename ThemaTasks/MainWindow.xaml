<Window x:Class="ThemaTasks.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThemaTasks"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <Button  Name="btnStart" Content="Starte Tasks" Width="125"
                Margin="5" Click="btnStart_Click"/>
            <Button  Name="btnCancel" Content="Stoppe X" Width="125"
                Margin="5" Click="btnCancel_Click"/>
        </StackPanel>
        <ScrollViewer Grid.Row="1">
            <TextBlock  Name="tblOutput"/>
        </ScrollViewer>
    </Grid>
</Window>
