<Window x:Class="ThemaAsyncAwaitWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThemaAsyncAwaitWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button x:Name="btnLoad" Content="Laden" Click="btnLoad_Click" Width="100"></Button>
            <Button x:Name="btnLoad2" Content="Laden2" Click="btnLoad2_Click" Width="100"></Button>
            <Button x:Name="btnLoad3" Content="Laden3" Click="btnLoad3_Click" Width="100"></Button>
        </StackPanel>
        <ScrollViewer Grid.Row="1">
             <TextBlock x:Name="textblock" >Hallo</TextBlock>
        </ScrollViewer>
       
        
    </Grid>
</Window>
